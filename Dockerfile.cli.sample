FROM denoland/deno:alpine
WORKDIR /anidb
COPY . .
ENV PGUSER=POSTGRES USER
ENV PGPASSWORD=POSTGRES PASSWORD
ENV PGDATABASE=POSTGRES DATABASE
ENV PGHOST=URL TO POSTGRES
ENV PGPORT=5432
ENV PGSSLMODE=verify-ca
ENV PGSSLCERT=PATH TO POSTGRES CERT
ENV ANIDB_DB=http://anidb.net/api/anime-titles.dat.gz
ENV ANIDB_DBNAME=DATABASE TABLE
ENTRYPOINT ["deno", "run", "-A", "cli.ts"]
